{
    "compilerOptions": {
        "esModuleInterop": true,
        "moduleResolution": "node",
        "module": "es6",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        },
        "types": ["svelte"],
        "target": "es6"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}